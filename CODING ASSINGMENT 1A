	    System.out.println("Price3: " + total3);
	    
	    double finaltotal = (total1 + total2 + total3);
	    System.out.println("Total: " + total1);
	    
	
	   
	    if(finaltotal>100) {
	    	double discountreceived =(finaltotal*20)/100;
	    	double a = finaltotal - discountreceived;
	        System.out.println ("The total price : " + finaltotal);	    
	        System.out.println("The discount received : " + discountreceived);
			System.out.println("The price to paid : " + a );
			
		}
			else if (finaltotal > 100) {
				double discountreceived = (finaltotal*10)/100;
				double b = finaltotal - discountreceived;
				System.out.println ("The total price : " + finaltotal);
				System.out.println("The discount received : " + discountreceived);
				System.out.println("The price to paid : " + b );
	   
	    
	    
	    

